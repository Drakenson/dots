#Variables

#Wallpaper

set $WallpaperDir /home/robin/Bilder/Wallpaper
set $WallpaperImage church_girl.jpg

#Color Schemes
set $ActColor #ac583b
set $InactColor #221616

#Hotkeys
set $win Mod4
set $alt Mod1
set $ctrl control

#Sway Stuff

#Keyboard
input 5426:515:Razer_Razer_BlackWidow_Chroma {
  xkb_layout "de"
  xkb_model "pc105"
  xkb_numlock enabled
}

#Display

#output HDMI-A-1 pos 0 0 res 1920x1080@60Hz bg $WallpaperDir/$WallpaperImage fill
#output DP-1 pos 1920 0 res 1920x1080@60Hz bg $WallpaperDir/$WallpaperImage fill
output DP-1 pos 0 0 res 1920x1080@60Hz
output HDMI-A-1 pos 1920 0 res 1920x1080@60Hz

#Cursor
seat seat0 xcursor_theme Vanilla-DMZ


# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu 10

#Floating Windows
floating_minimum_size 75 x 50
floating_maximum_Size 1880 x 1075

#Open Keepass floating
for_window [app_id="org.keepassxc.KeePassXC"] floating enable

#Borders
smart_borders on
default_border pixel 2
default_floating_border pixel 2
hide_edge_borders both

#Workspace back-and-forth
#For instance: Assume you are on workspace "1: www" and switch to "2: IM" using mod+2 because somebody sent you a message. You don’t need to remember where you came from now, you can just press $mod+2 again to switch back to "1: www".
workspace_auto_back_and_forth yes

#Colors
client.focused $ActColor $InactColor #ffffff $ActColor $ActColor
client.focused_inactive $InactColor $InactColor #ffffff $InactColor $InactColor
client.unfocused $InactColor $InactColor #ffffff $InactColor $InactColor
client.urgent $ActColor $InactColor #ffffff $ActColor $ActColor
client.placeholder $ActColor $InactColor #ffffff $ActColor $ActColor

# Use Mouse+$win to drag floating windows to their wanted position
floating_modifier $win

# start a terminal
bindsym $win+Return exec alacritty
bindsym $win+Shift+Return exec alacritty -e pwsh

# kill focused window
bindsym $win+Shift+q kill

# start dmenu (a program launcher)
#bindsym $win+d exec dmenu_run
bindsym $win+d exec wofi -b
bindsym $win+Shift+d exec wofi -b -S run

# alternatively, you can use the cursor keys:
bindsym $win+Left focus left
bindsym $win+Down focus down
bindsym $win+Up focus up
bindsym $win+Right focus right

# alternatively, you can use the cursor keys:
bindsym $win+Shift+Left move left
bindsym $win+Shift+Down move down
bindsym $win+Shift+Up move up
bindsym $win+Shift+Right move right

# split in horizontal orientation
bindsym $win+h split h

# split in vertical orientation
bindsym $win+v split v

# enter fullscreen mode for the focused container
bindsym $win+f fullscreen toggle

#toggle sticky
bindsym $win+Shift+space sticky toggle

# toggle tiling / floating
bindsym $win+space floating toggle

# toggle tiling / tabbed
bindsym $win+w layout toggle tabbed splith

# focus the parent container
bindsym $win+a focus parent

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "10"
set $wsn ""
set $wsm ""
#bind workspaces to screens
workspace $ws1 output DP-1
workspace $ws2 output HDMI-A-1
workspace $ws3 output DP-1
workspace $ws4 output HDMI-A-1
workspace $ws5 output DP-1
workspace $ws6 output HDMI-A-1
workspace $ws7 output DP-1
workspace $ws8 output HDMI-A-1
workspace $ws9 output DP-1
workspace $ws0 output HDMI-A-1
workspace $wsn output HDMI-A-1
workspace $wsm output HDMI-A-1

# switch to workspace
bindsym $win+1 workspace $ws1
bindsym $win+2 workspace $ws2
bindsym $win+3 workspace $ws3
bindsym $win+4 workspace $ws4
bindsym $win+5 workspace $ws5
bindsym $win+6 workspace $ws6
bindsym $win+7 workspace $ws7
bindsym $win+8 workspace $ws8
bindsym $win+9 workspace $ws9
bindsym $win+0 workspace $ws0
bindsym $win+n workspace $wsn
bindsym $win+m workspace $wsm

# move focused container to workspace
bindsym $win+Shift+1 move container to workspace $ws1
bindsym $win+Shift+2 move container to workspace $ws2
bindsym $win+Shift+3 move container to workspace $ws3
bindsym $win+Shift+4 move container to workspace $ws4
bindsym $win+Shift+5 move container to workspace $ws5
bindsym $win+Shift+6 move container to workspace $ws6
bindsym $win+Shift+7 move container to workspace $ws7
bindsym $win+Shift+8 move container to workspace $ws8
bindsym $win+Shift+9 move container to workspace $ws9
bindsym $win+Shift+0 move container to workspace $ws0
bindsym $win+Shift+n move container to workspace $wsn
bindsym $win+Shift+m move container to workspace $wsm

assign [app_id="evolution"] workspace ""

#Reload and exit
bindsym $win+Shift+r reload
bindsym $win+Shift+e exec "swaynag -f 'pango:Ubuntu 10' -t warning -m 'Do you really want to exit sway?' -B 'Yes' 'swaymsg exit'"

#Screenshots
bindsym $win+Shift+s exec --no-startup-id 'grim -g "$(slurp)" - | wl-copy'
bindsym Print exec --no-startup-id 'grim -g "$(slurp)" - | wl-copy'

#Waybar
bar {
swaybar_command waybar
}

#Audio control
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume exec "sh -c 'pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -2%'"
bindsym XF86AudioRaiseVolume exec "sh -c 'pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +2%'"

#Autostart

#Init Razer Macro Keys
exec --no-startup-id echo -n -e "\x03\x00" > $(find -L /sys/bus/hid/drivers/razerkbd/0003:1532:0203.000* -maxdepth 1 -type f -name device_mode)
#Init ALSA und PipeWire
exec --no-startup-id "sh -c 'sleep 5; exec /home/robin/.scripts/init_pipewire.sh'"
#Scream
exec --no-startup-id "sh -c 'sleep 5; exec scream'"
#Set Wallpaper
exec --no-startup-id oguri
exec --no-startup-id /home/robin/.scripts/set_random_wallpaper.sh
#Telegram
exec --no-startup-id telegram-desktop -startintray
#Nextcloud Client
exec --no-startup-id "sh -c 'sleep 5; exec nextcloud'"
#Notifications
exec --no-startup-id mako
#Nightmode
exec --no-startup-id gammastep
#Polychromatic Config (einmal auflisten, um sicherzustellen, dass Farbeinstellungen geladen werden..)
exec --no-startup-id polychromatic-cli -l
#Evolution Mail
exec --no-startup-id evolution


